<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gms.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MY APP</name>
    <description>
        A Sample Template
    </description>
    <author email="ms.gokul.ms@gmail.com" href="">
       GOKUL MS
    </author>
    <content src="index.html" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="android-minSdkVersion" value="18" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarBackgroundColor" value="#098266" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
		<splash src="assets/images/splashscreen/android/961x1600.png" />
		<splash src="assets/images/splashscreen/android/240x320.png"  platform="android" qualifier="ldpi" />
		<splash src="assets/images/splashscreen/android/320x480.png"  platform="android" qualifier="mdpi" />
		<splash src="assets/images/splashscreen/android/480x800.png"  platform="android" qualifier="hdpi" />
		<splash src="assets/images/splashscreen/android/961x1600.png" platform="android" qualifier="xhdpi" />
		<splash src="assets/images/splashscreen/android/961x1600.png" platform="android" qualifier="fr-xhdpi" />
		<icon src="images/icon.png" />
		<allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
        <true />
    </config-file>
    <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
        <false />
    </config-file>
    <config-file parent="/manifest/application" platform="android" target="AndroidManifest.xml">
        <activity android:launchMode="singleTask" />
    </config-file>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <engine name="android" spec="6.2.3" />
    <plugin name="cordova-plugin-device" spec="1.1.6" />
    <plugin name="cordova-plugin-network-information" spec="1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="cordova-plugin-x-toast" spec="2.6.0" />

</widget>
